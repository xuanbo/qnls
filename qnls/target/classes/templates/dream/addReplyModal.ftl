<#-- 填写Dream modal框 -->
<div>
    <div id="addReplyModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">写下你的深情回复吧</h2>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="reply_content" class="control-label">内容:</label>
                        <textarea class="form-control" id="reply_content" placeholder="请输入回复内容：不超过140个字"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="resetReplySubmit" type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button id="addReplySubmit" type="button" class="btn btn-primary">提交</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
